{
  "name": "generic-ds",
  "version": "0.0.7",
  "private": false,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/swapnilsachan03/generic-ds.git"
  },
  "author": "Swapnil Sachan <swapnil.sachan2003@gmail.com>",
  "keywords": [
    "react",
    "design-system",
    "ui"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run clean && npm run build:css && npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc",
    "build:esm": "tsc -m es6 --outDir esm",
    "build:css": "npx @tailwindcss/cli -i src/index.css -o dist/tailwind.css --minify",
    "clean": "rimraf lib && rimraf esm && rimraf dist",
    "lint": "eslint .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "main": "lib",
  "types": "lib/index.d.ts",
  "module": "esm/index.js",
  "files": [
    "lib",
    "esm",
    "dist"
  ],
  "dependencies": {
    "@tailwindcss/vite": "^4.0.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.4",
    "@eslint/js": "^9.20.0",
    "@storybook/addon-essentials": "^8.5.6",
    "@storybook/addon-interactions": "^8.5.6",
    "@storybook/addon-onboarding": "^8.5.6",
    "@storybook/blocks": "^8.5.6",
    "@storybook/react": "^8.5.6",
    "@storybook/react-vite": "^8.5.6",
    "@storybook/test": "^8.5.6",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "chromatic": "^11.25.2",
    "eslint": "^9.20.1",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-storybook": "^0.11.2",
    "globals": "^15.15.0",
    "rimraf": "^6.0.1",
    "storybook": "^8.5.6",
    "tailwindcss": "^4.0.6",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.24.0",
    "vite": "^6.1.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
